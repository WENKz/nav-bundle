<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="nav.class_metadata.driver.annotation" class="NavBundle\ClassMetadata\Driver\AnnotationClassMetadataDriver" public="false">
            <argument type="service" id="annotations.reader"/>
            <tag name="nav.class_metadata.driver" alias="annotation"/>
        </service>

        <service id="nav.registry" class="NavBundle\Registry" public="true">
            <argument/> <!-- managers -->
        </service>
        <service id="NavBundle\Registry" alias="nav.registry" public="true"/>
        <service id="NavBundle\RegistryInterface" alias="nav.registry" public="true"/>

        <service id="nav.decoder.object" class="NavBundle\Serializer\ObjectDecoder" public="false">
            <tag name="serializer.encoder" priority="-1"/>
        </service>

        <service id="nav.denormalizer.object" class="NavBundle\Serializer\ObjectDenormalizer" public="false">
            <argument type="service" id="nav.registry"/>
            <argument type="service" id="property_accessor"/>
            <tag name="serializer.normalizer" priority="-1"/>
        </service>
    </services>
</container>
